{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowJs": false,
    "paths": {
      "@payload-config": [
        "./src/payload.config.ts"
      ],
      "@payload-types": [
        "./src/payload-types.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/importMap.js",
    "**/admin/importMap.js",
    "src/app/(payload)/admin/importMap.js",
    "src/app/(payload)",
    ".next",
    "dist",
    "build"
  ]
}