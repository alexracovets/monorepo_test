{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "PAYLOAD_SECRET",
        "DATABASE_URL",
        "DATABASE_PASS",
        "API_DATABASE_URL",
        "API_DATABASE_PASS",
        "S3_BUCKET",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "S3_ENDPOINT",
        "NEXT_PUBLIC_RECAPTCHA_SITE_KEY",
        "GOOGLE_RECAPTCHA_SECRET_KEY",
        "GOOGLE_RECAPTCHA_SECRET_KEY_PUBLIC",
        "NEXT_PUBLIC_SERVER_URL",
        "ALLOWED_ORIGIN",
        "APPLICATION_PORT",
        "COOKIE_DOMAIN",
        "JWT_ACCESS_TOKEN_TTL",
        "JWT_REFRESH_TOKEN_TTL",
        "JWT_SECRET",
        "NODE_ENV",
        "REDIS_URL",
        "TURBOSMS_TOKEN"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "doc": {
      "cache": false,
      "persistent": true
    },
    "db": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    }
  }
}